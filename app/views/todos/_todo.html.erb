<%= turbo_frame_tag todo do %>
  <div class="flex mb-4 items-center justify-between ">
    <p class="<%= todo.status == 'completed' ? 'line-through text-green-500' : 'text-gray-900' %>"><%= todo.name %></p>
    <div>
      <% if todo.status == 'completed' %>
        <button class="p-2 ml-4 mr-2 border-2 rounded hover:text-white text-gray-500 border-gray-500 hover:bg-gray-500">Not Done</button>
      <% elsif todo.status == 'created' %>
        <button class="p-2 ml-4 mr-2 border-2 rounded hover:text-white text-green-500 border-green-500 hover:bg-green-500">Done</button>
      <% end %>
      <%= link_to 'Remove', todo, class: 'flex-no-shrink p-2 ml-2 border-2 rounded text-red-500 border-red-500 hover:text-white hover:bg-red-500', remote: true, method: :delete %>
    </div>
  </div>
<% end %>